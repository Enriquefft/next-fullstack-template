		"dev": "next dev --turbopack",
		"lint": "biome check --fix .",
		"start": "next start",
		"test": "bun test --exclude e2e/**/*.spec.ts",
		"test:e2e": "./scripts/run-e2e.sh",
		"test:e2e:headed": "./scripts/run-e2e.sh --headed",
		"test:e2e:report": "bunx playwright show-report",
		"test:e2e:ui": "./scripts/run-e2e.sh --ui",
		"test:script": "bats tests/script/unit tests/script/integration",
		"test:script:integration": "bats tests/script/integration",
